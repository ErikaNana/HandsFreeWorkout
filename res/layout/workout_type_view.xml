<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:gravity="center">

   <TextView 
       android:id="@+id/workoutTitle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize = "@dimen/buttonTextSize"
       android:text="@string/distanceOption"
       android:textColor="@color/OffGrey"/> 
	<Button
	    android:focusable="false"
	    android:id="@+id/expandDescriptionButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/option"
	    android:textSize="@dimen/optionSelector"
	    android:layout_alignTop="@+id/workoutTitle"
	    android:layout_toRightOf="@+id/workoutTitle" />
	<TextView
	    android:focusable="false"
	    android:id = "@+id/expandDescription"
	    android:layout_width = "wrap_content"
	    android:layout_height = "wrap_content"
	    android:textSize="@dimen/descriptionTextSize"
	    android:layout_below="@+id/workoutTitle"
	    android:layout_toLeftOf="@+id/expandDescriptionButton"
	    android:visibility="gone"> 
	    
	</TextView>    

</RelativeLayout>
